import React from "react";

function BLqTracker({ userData }) {
  return (
    <div className="blq-tracker">
      <h2>Your BLq Balance</h2>
      <div className="blq-balance">{userData.blqBalance} BLq</div>
      <p>Pending UIC rewards: {userData.rewards.toLocaleString()} UIC</p>
      {userData.contributionRank && (
        <p>Mesh rank: #{userData.contributionRank}</p>
      )}
    </div>
  );
}

export default BLqTracker;
