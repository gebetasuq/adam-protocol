import React from "react";

const demoLeaders = [
  { campus: "SÃ£o Paulo Campus A", score: 18.3 },
  { campus: "Berlin Campus Mesh", score: 16.7 },
  { campus: "Addis Ababa Tech", score: 15.9 },
];

function Leaderboard() {
  return (
    <div className="leaderboard">
      <h2>Mesh Leaderboard</h2>
      {demoLeaders.map((row, i) => (
        <div key={row.campus} className="leaderboard-entry">
          <span className="rank">#{i + 1}</span>
          <span>{row.campus}</span>
          <span>{row.score}%</span>
        </div>
      ))}
    </div>
  );
}

export default Leaderboard;
