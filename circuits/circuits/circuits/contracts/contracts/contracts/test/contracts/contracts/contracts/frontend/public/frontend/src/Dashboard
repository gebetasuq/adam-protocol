import React from "react";

const MetricCard = ({ label, value, suffix }) => (
  <div className="metric-card">
    <div className="metric-value">
      {value}
      {suffix}
    </div>
    <div className="metric-label">{label}</div>
  </div>
);

function Dashboard({ metrics }) {
  return (
    <>
      <MetricCard
        label="Participants"
        value={metrics.participants.toLocaleString()}
      />
      <MetricCard
        label="Verified Actions"
        value={metrics.verifiedActions.toLocaleString()}
      />
      <MetricCard label="BLq Minted" value={metrics.blqMinted} />
      <MetricCard
        label="Energy Reduction"
        value={metrics.energyReduction}
        suffix="%"
      />
      <MetricCard
        label="ADAM Bond Performance"
        value={metrics.bondPerformance}
        suffix="%"
      />
    </>
  );
}

export default Dashboard;
